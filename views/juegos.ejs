                    <a>
                        <h1 class="carousel-item__details--title"> Actividades</h1>
                        <p class="carousel-item__details--subtitle"> Toca Para Jugar</p>
                    </a>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-item__img1" src="/images/actividades/descansar.png" alt="Relajación" />
                <div class="carousel-item__details">
                    <a>
                        <h1 className="carousel-item__details--title"> Relajación</h1>
                        <p className="carousel-item__details--subtitle"> Toca Para Jugar</p>
                    </a>
